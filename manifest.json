{
    "manifest_version": 3,
    "name": "VeriFact",
    "version": "1.0",
    "description": "Advanced Fake News Detection Tool",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.svg",
        "48": "images/icon48.svg",
        "128": "images/icon128.svg"
      }
    },
    "icons": {
      "16": "images/icon16.svg",
      "48": "images/icon48.svg",
      "128": "images/icon128.svg"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ]
  }